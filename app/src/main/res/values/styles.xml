<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ScrollViewList">
        <attr name="showItemNum" format="integer"/>
        <attr name="itemResId" format="reference"/>
        <attr name="itemViewType">
            <enum name="TextView" value="0"></enum>
            <enum name="TextView_Readonly" value="1"></enum>
        </attr>
    </declare-styleable>

    <style name="PlayerControlButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@color/app_button_inactive</item>
    </style>
</resources>
